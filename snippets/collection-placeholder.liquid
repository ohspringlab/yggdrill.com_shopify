{% comment %}
  Collection Placeholder Products
  Shows demo products when collection is empty
{% endcomment %}

{% assign demo_products = "Bitaxe Gamma 601,Bitaxe Gamma 602,Bitaxe Gamma 602 Black Ice + Bitcoin Full Node Combo,Bitaxe Gamma 602 Ice Angel + Bitcoin Full Node Combo" | split: "," %}
{% assign demo_prices = "1,599,1,499,6,999,6,999" | split: "," %}
{% assign demo_categories = "Home Miners,Home Miners,Home Miners; Combo Deals; Home Nodes,Home Miners; Combo Deals; Home Nodes" | split: "," %}

{% for title in demo_products %}
<div class="product-card">
  {% if forloop.index <= 2 %}<span class="product-card__badge">HOT</span>{% endif %}
  <div class="product-card__media">
    <div class="product-card__corner product-card__corner--tl"></div>
    <div class="product-card__corner product-card__corner--tr"></div>
    <div class="product-card__corner product-card__corner--bl"></div>
    <div class="product-card__corner product-card__corner--br"></div>
    <div class="product-card__watermark">
      <img src="https://yggdrill.com/wp-content/uploads/2025/10/logo.png" alt="">
    </div>
    <div class="product-card__actions">
      <button class="product-card__action" aria-label="Compare">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 3h5v5M4 20L21 3M21 16v5h-5M15 15l6 6M4 4l5 5"></path>
        </svg>
      </button>
      <button class="product-card__action" aria-label="Quick view">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
      <button class="product-card__action" aria-label="Wishlist">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
      </button>
    </div>
    <a href="#">
      <div class="product-card__placeholder">
        <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1">
          <rect x="3" y="3" width="18" height="18" rx="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
      </div>
    </a>
    <div class="product-card__wave">
      <a href="#" class="product-card__add-to-cart">Add To Cart</a>
    </div>
  </div>
  <div class="product-card__content">
    <h3 class="product-card__title"><a href="#">{{ title }}</a></h3>
    <div class="product-card__category">{{ demo_categories[forloop.index0] | replace: "; ", ", " }}</div>
    <div class="product-card__rating">
      <span class="product-card__stars">★★★★★</span>
      <span class="product-card__reviews">({{ forloop.index }} Reviews)</span>
    </div>
    <div class="product-card__price">
      <span class="product-card__price-amount">{{ demo_prices[forloop.index0] }}</span>
      <span class="product-card__price-currency">kr</span>
      <span class="product-card__price-vat">Excl. VAT</span>
    </div>
  </div>
</div>
{% endfor %}
