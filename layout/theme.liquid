      </div>
      <ul class="menu-drawer__menu">
        <li><a href="/collections/home-miners" class="menu-drawer__menu-item">Home Miners</a></li>
        <li><a href="/collections/home-nodes" class="menu-drawer__menu-item">Home Nodes</a></li>
        <li><a href="/collections/accessories-spares" class="menu-drawer__menu-item">Accessories & Spares</a></li>
        <li><a href="/collections/combo-deals" class="menu-drawer__menu-item">Combo Deals</a></li>
        <li><a href="/collections/bitcoin-merch" class="menu-drawer__menu-item">Bitcoin Merch</a></li>
        <li><a href="/pages/flasher" class="menu-drawer__menu-item">Flasher</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    <!-- Newsletter Bar -->
