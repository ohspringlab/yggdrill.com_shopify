    <!-- Chat Button -->
    <button class="chat-button" aria-label="Search">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </button>

    <script>
      const menuToggle = document.getElementById('mobileMenuToggle');
      const menuDrawer = document.getElementById('menuDrawer');
      const menuClose = document.getElementById('menuDrawerClose');

      if (menuToggle && menuDrawer) {
        menuToggle.addEventListener('click', () => {
          menuDrawer.classList.toggle('active');
          document.body.style.overflow = menuDrawer.classList.contains('active') ? 'hidden' : '';
        });
        menuClose.addEventListener('click', () => {
          menuDrawer.classList.remove('active');
          document.body.style.overflow = '';
        });
      }
    </script>
    <script src="{{ 'star-rain.js' | asset_url }}" defer></script>
  </body>
</html>
