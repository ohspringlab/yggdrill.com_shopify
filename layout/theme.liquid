<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#f97316">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'star-rain.css' | asset_url | stylesheet_tag }}

    <style>
      /* Header */
      .header-wrapper {
        background: white;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.2rem 0;
        gap: 2rem;
      }

      .header__search {
        flex: 0 0 240px;
        position: relative;
      }

      .header__search svg {
        position: absolute;
        left: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1.6rem;
        height: 1.6rem;
        color: #888;
      }

      .header__logo {
        flex: 1;
        text-align: center;
      }

      .header__logo-image {
        height: 42px;
        width: auto;
      }

      .header__icons {
        display: flex;
        align-items: center;
        gap: 1.2rem;
      }

      .header__icon {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #333;
        text-decoration: none;
        font-size: 1.3rem;
        position: relative;
      }

      .header__icon svg {
        width: 2rem;
        height: 2rem;
      }

      .header__icon-text {
        display: none;
      }

      @media screen and (min-width: 990px) {
        .header__icon-text { display: inline; }
      }

      .header__icon .badge {
        position: absolute;
        top: -6px;
        right: -6px;
        background: var(--color-primary);
        color: white;
        font-size: 1rem;
        font-weight: 600;
        min-width: 1.6rem;
        height: 1.6rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* Main Navigation */
      .main-nav {
        background: white;
        border-top: 1px solid #eee;
      }

      .main-nav__list {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .main-nav__link {
        display: block;
        padding: 1rem 0;
        font-size: 1.4rem;
        font-weight: 500;
        color: #333;
        text-decoration: none;
      }

      .main-nav__link:hover,
      .main-nav__link--active {
        color: var(--color-primary);
      }

      @media screen and (max-width: 989px) {
        .main-nav { display: none; }
        .header__search { display: none; }
      }

      /* Mobile Menu Toggle */
      .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        gap: 5px;
        background: none;
        border: none;
        padding: 0.8rem;
        cursor: pointer;
      }

      .mobile-menu-toggle span {
        display: block;
        width: 22px;
        height: 2px;
        background: #333;
      }

      @media screen and (max-width: 989px) {
        .mobile-menu-toggle { display: flex; }
      }

      /* Menu Drawer */
      .menu-drawer {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: white;
        z-index: 200;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        overflow-y: auto;
      }

      .menu-drawer.active { transform: translateX(0); }

      .menu-drawer__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid #eee;
      }

      .menu-drawer__close {
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
      }

      .menu-drawer__menu {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .menu-drawer__menu-item {
        display: block;
        padding: 1.5rem 2rem;
        font-size: 1.6rem;
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #f3f4f6;
      }
    </style>
  </head>

  <body>
